{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022", // commonjs
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}